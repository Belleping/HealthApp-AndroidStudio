<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#cecece"
    tools:context="com.app.ludus.healer.MedicamentoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/view">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_toStartOf="@+id/medicamento_btn_salvar">
                        <ImageButton
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:scrollbarSize="48dp"
                            android:background="#00000000"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_back_black_48dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Adicionar paciente"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ok"
                        android:scaleType="fitCenter"
                        android:background="#00000000"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:id="@+id/medicamento_btn_salvar" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/insert_point"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <include layout="@layout/content_cardview_medicamento" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/id_card_duracao">
                            <TextView
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Duração do tratamento"
                                android:textColor="#019587" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:background="#cecece"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/medicamento_lnl_inicial"
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:onClick="onOpen">
                                        <TextView
                                            android:layout_weight="0.2"
                                            android:textSize="10sp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="SEG, 06/2016"
                                            android:id="@+id/medicamento_txv_inicialdata" />
                                        <TextView
                                            android:layout_weight="0.8"
                                            android:layout_width="match_parent"
                                            android:textSize="30sp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="20"
                                            android:id="@+id/medicamento_txv_inicialdia" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/medicamento_lnl_final"
                                        android:orientation="vertical"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:onClick="onClick">
                                        <TextView
                                            android:layout_weight="0.2"
                                            android:textSize="10sp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="SEG, 06/2016"
                                            android:id="@+id/medicamento_txv_finaldata" />
                                        <TextView
                                            android:layout_weight="0.8"
                                            android:layout_width="match_parent"
                                            android:textSize="30sp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="20"
                                            android:id="@+id/medicamento_txv_finaldia" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>